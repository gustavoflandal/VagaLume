# Configuração personalizada do MySQL 8.0 para VagaLume
# Otimizada para aplicações financeiras

[mysqld]
# Configurações básicas
default-storage-engine = InnoDB
default-table-type = InnoDB
server-id = 1

# Charset e Collation padrão
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Timezone
default-time-zone = '-03:00'

# SQL Mode para dados financeiros (rigoroso)
sql-mode = STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Performance InnoDB
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50

# Conexões
max_connections = 200
max_connect_errors = 10000
wait_timeout = 300
interactive_timeout = 300

# Query Cache (desabilitado no MySQL 8.0, mas deixando para referência)
# query_cache_type = 0
# query_cache_size = 0

# Logs
log-error = /var/log/mysql/error.log
slow-query-log = 1
slow-query-log-file = /var/log/mysql/slow.log
long_query_time = 2

# Configurações de segurança
local-infile = 0
secure-file-priv = /var/lib/mysql-files/

# Configurações para dados financeiros
# Precisão decimal para valores monetários
div_precision_increment = 4

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4