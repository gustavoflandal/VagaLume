# Aplicação
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Banco de Dados MySQL 8.0
DATABASE_URL="mysql://vagalume:sua_senha@localhost:3306/vagalume?charset=utf8mb4&timezone=America/Sao_Paulo"
MYSQL_VERSION=8.0.35

# JWT
JWT_SECRET=sua_chave_secreta_super_forte_aqui_min_32_chars
JWT_REFRESH_SECRET=sua_chave_refresh_secreta_diferente_min_32_chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email (SMTP - opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# Uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_PATH=./uploads

# Redis (Cache - opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=sua_chave_sessao_secreta

# Monitoramento (opcional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
PROMETHEUS_ENABLED=false

# Features Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_WEBHOOK_NOTIFICATIONS=false
FEATURE_FILE_ATTACHMENTS=true

# Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=
HOTJAR_ID=

# Integração Bancária (futuro)
OPEN_BANKING_ENABLED=false
PIX_CERT_PATH=
PIX_KEY_PATH=